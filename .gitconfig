[user]
	name = kotakawase
	email = kottan00@gmail.com

[alias]
  v = version
  st = status
  cm = commit
  di = diff
  br = branch
  bra = branch -a
  brr = branch -r
  brv = branch -v
  brm = branch -m
  brd = branch -d
  brdd = branch -D
  co = checkout
  cob = checkout -b
  lg = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
  lga = log --graph --all --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
[init]
	defaultBranch = main
